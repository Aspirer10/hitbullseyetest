{
  "compilerOptions": {
    "target": "es5",
    "outDir": "dist",
    "module": "es6",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "lib": ["ESNEXT", "es6", "dom", "es2016", "es2017"],
    "jsx": "react",
    "declarationMap": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "./dist",
    "node_modules"
  ]
}
