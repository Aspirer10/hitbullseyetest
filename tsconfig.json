{
  "compilerOptions": {
    "target": "es5",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "lib": [
      "dom",
      "es2015"
    ]
  },
  "exclude": [
    "./dist"
  ]
}
